<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pc_store.Views.CardProduct">
    <ContentPage.Content>
        <StackLayout Margin="50">
            <Button Text="Назад" Clicked="Button_Clicked"/>
            <Label x:Name="id" Text="{Binding Id}"/>
            <Label x:Name="name" Text="{Binding name}"/>
            <Image Source="{Binding img}" WidthRequest="200"/>
            
            <Label Text="Описание" FontSize="Large"/>
            <Label x:Name="description" Text="{Binding description}" />
            <Label x:Name="type" Text="{Binding type}"  />
            <Label x:Name="price" Text="{Binding price}" />

            <Label Text="Кол-во в наличии" FontSize="Medium"/>
            <Label x:Name="quantity" Text="{Binding quantity}"/>
            
            <Button x:Name="btn_cart" Text="В корзину" Clicked="Button_Clicked_1"/>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>