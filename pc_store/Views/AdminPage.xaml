<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pc_store.Views.AdminPage">
    <ContentPage.Content>
        <StackLayout Margin="50">
            <StackLayout>
                <Button Text="Назад" HorizontalOptions="Start" Clicked="Button_Clicked_1"/>
                <Label Text="Админка"
                  FontSize="Large"
                HorizontalOptions="Center" />
            </StackLayout>
            
            <Button Text = "Добавить товар" FontSize="Title" BorderWidth="1"
        HorizontalOptions="Center" 
        Clicked="Button_Clicked" WidthRequest="250" />

            <Button Text = "Добавить кол-во товара" FontSize="Title" BorderWidth="1"
        HorizontalOptions="Center" 
         WidthRequest="250" Clicked="Button_Clicked_3"/>

            <Button Text = "Добавить тип" FontSize="Title" BorderWidth="1"
        HorizontalOptions="Center" 
         WidthRequest="250" Clicked="Button_Clicked_2"/>

            <Button Text = "Редактировать товар" FontSize="Title" BorderWidth="1"
        HorizontalOptions="Center" 
         WidthRequest="250" Clicked="Button_Clicked_4"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>