<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pc_store.Views.StartPage">
    <ContentPage.Content>
        <StackLayout Margin="50">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="300">
                <Label x:Name="textLabel" FontSize="Large" Text="Авторизация"/>
                <Entry x:Name="login"  Placeholder = "Логин"/>
                <Entry x:Name="password"  Placeholder = "Пароль" IsPassword ="True" />

                <Button Text = "Войти" FontSize="Medium" BorderWidth="1"
        HorizontalOptions="Center" 
        Clicked="Button_Clicked" WidthRequest="250" />

                <Button Text = "Зарегистрироваться" FontSize="Medium" BorderWidth="1"
        HorizontalOptions="Center" 
        Clicked="Button_Clicked_1" WidthRequest="250" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>