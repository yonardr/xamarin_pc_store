<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pc_store.Views.AdminPages.AddStockProd">
    <ContentPage.Content>
        <StackLayout Margin="50">
            <StackLayout>
                <Button Text="Назад" HorizontalOptions="Start" Clicked="Button_Clicked_1"/>
                <Label Text="Добавление товара"
                VerticalOptions="Start" 
                HorizontalOptions="Center" FontSize="Large" />
            </StackLayout>
            <Label Text="Выберите товар" />
            <Picker x:Name="picker_products"  />
            <Label Text="Кол-во на складе" />
            <Entry x:Name="quantity"/>

            <Button Text="Изменить" Clicked="Button_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>